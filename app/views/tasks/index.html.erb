<h1 class="text-center">My Tasks</h1>

<div class="container-list">
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <span class="checkmark"><i class="fa-regular fa-square-check"></i></span>
        <% else %>
          <span class="checkmark"><i class="fa-regular fa-square"></i></span>
        <% end %>
        <%= link_to task.title, task_path(task) %> â€¢
        <%= link_to(task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}) do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<hr>
<div class="box-link">
  <%= link_to(new_task_path) do %>
    <i class="fa-solid fa-plus"></i> Add a new task
  <% end %>
</div>
